#!/bin/sh

FILE="$1"
if [ "$FILE" = "" ]; then
	echo "missing argument"
	exit 1
fi

cat <<EOF
<html>
<head>
	<title>$FILE</title>
	<style type="text/css">
		body {
			margin: 3em 5em;
			font-family: Helvetica, sans-serif;
			font-size: 16px;
		}
		code {
			font-family: Menlo, Monaco, "Courier New", monospace;
			font-size: 14px;
		}
		#main {
			width: 40em;
		}
	</style>
</head>

<body>

<div id="main">

EOF

HERE=`dirname $0`
cat $FILE | $HERE/Markdown.pl | $HERE/SmartyPants.pl

cat <<EOF

</div>

</body>
</html>
EOF

