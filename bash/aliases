
alias ls='/bin/ls -F'

# Set up 'ls' for color output if it's available.
#if [[ -x /usr/local/pkg/gnu-coreutils/bin/ls ]]; then
	## GNU Coreutils as installed on ISS systems.
	#alias ls='/usr/local/bin/ls --color -F'
#elif [[ "$OS" = "Linux" ]]; then
